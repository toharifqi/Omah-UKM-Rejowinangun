<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGreyLight"
    tools:context=".HistoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorHeight="48dp"
            android:background="@drawable/profile_bg"
            app:tabTextColor="@color/white"
            app:tabSelectedTextColor="@color/colorPrimaryDark"
            app:tabIndicator="@drawable/tab_selector2"
            app:tabIndicatorColor="@color/white"
            app:tabGravity="fill"
            app:tabMode="fixed"
            android:clickable="false"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget">
            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menunggu Verifikasi" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terverifikasi" />

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="18dp"
        android:adjustViewBounds="false"
        android:background="@color/white"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:backgroundTint="@color/white"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_baseline_arrow_back_orange"
        app:tint="@null"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>