<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_gravity="center"
    android:id="@+id/product_cardview"
    android:layout_marginTop="6dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/project_ownerpic"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/profile_placeholder"/>
            <TextView
                android:id="@+id/project_corp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Usaha belum memiliki nama)"
                android:layout_marginLeft="8dp"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/project_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Sedang Berjalan"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="88dp"
                android:layout_height="88dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:id="@+id/project_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_placeholder"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penambahan Diversifikasi Produk"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:maxLines="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/project_invested"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 000.000.000"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / "
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>
                    <TextView
                        android:id="@+id/project_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 000.000.000"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/project_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/colorAccent"/>
        <TextView
            android:id="@+id/project_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:layout_marginVertical="8dp"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="48sp"/>
        <Button
            android:id="@+id/upload_progress_btn"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:drawableLeft="@drawable/ic_baseline_description_white"
            android:text="Upload Progres Project"/>
        <Button
            android:id="@+id/detail_progress_btn"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:backgroundTint="@color/colorAccent"
            android:drawableLeft="@drawable/ic_baseline_details_24"
            android:text="Detail Progres"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>